%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Section Format %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\makeatletter
\renewcommand\@seccntformat[1]{}	% SET SECTION SYMBOL
\sectionfont{\normalsize}			% SET SECTION FONT
\subsectionfont{\normalfont}		% SET SUBSECTION FONT
\setlength{\parindent}{24pt}		% SETUP INDENTATION
\makeatother

% Add a Problem section with counter
\newcounter{problem}
\newcommand{\problem}[1][]{
  % Increment the problem counter
  \stepcounter{problem}
  % Create a new section with the current problem number and optional title
  \ifx\relax#1\relax  % Check if the optional argument is provided
    \section*{Problem \theproblem.}
  \else
    \section*{Problem \theproblem - #1}
  \fi
}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Theme %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\definecolor{nu purple}{HTML}{492C7F} % Purple
\definecolor{nu lightpurple}{HTML}{E3E0ED} % Light Purple

% Set caption color
\captionsetup[table]{labelfont={color=nu purple},font={color=nu purple}} 
\captionsetup[figure]{labelfont={color=nu purple},font={color=nu purple}}

% Hyperlinks
\hypersetup{
  bookmarks=true,
  colorlinks = true,
  linkcolor = nu purple,
  urlcolor  = nu purple,
  citecolor = nu purple,
  anchorcolor = nu purple,
  pdftex,
  pdfusetitle,
  pdfborder={0 0 0}
}


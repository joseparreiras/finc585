%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Page Style %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Margins %
\geometry{
  top=1in,            % <-- you want to adjust this
  inner=1in,
  outer=1in,
  bottom=1in,
  headheight=3ex,       % <-- and this
  headsep=5ex,          % <-- and this
}

% Title %
\makeatletter
\renewcommand{\maketitle}{\noindent\textnormal{\institute}\hfill\\[0.01in]
\textnormal{\course }\hfill{Prof. \prof}\\[0.01in]
\textnormal{\assignment}\hfill{\@date}\\[0.01in]
\@author\hfill{}\\[0.01in]
\smallskip\hrule\bigskip
\thispagestyle{plain}}

% Footnotes %
\setlength{\footnotemargin}{1em}
\setlength{\skip\footins}{1em}

% Page Style %
\fancyhf{}  
\pagestyle{fancy}
\lhead{\small\textit{\institute}}
\rhead{\small\textit{\assignment}}
\cfoot{\thepage}

% First page style only
\fancypagestyle{plain}{
  \fancyhf{}
  % \pagenumbering{roman} % Page numbering
  \renewcommand{\headrulewidth}{0pt}
  \cfoot{\thepage}
}


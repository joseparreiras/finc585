%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Math Symbols %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Basic Math Symbols %
\newcommand{\E}[1]{\mathbb{E}\left(#1\right)}
\newcommand{\V}[1]{\mathbb{V}\left(#1\right)}
\newcommand{\C}[2]{\mathbb{C}\left( #1, #2 \right)}
\newcommand{\N}{\mathbb{N}}
\newcommand{\R}{\mathbb{R}}
\newcommand{\Q}{\mathbb{Q}}
\newcommand{\Z}{\mathbb{Z}}
\newcommand{\simplex}{\bigtriangleup}
\newcommand{\norm}[1]{\left\lVert#1\right\rVert}
\newcommand{\abs}[1]{\left\lvert#1\right\rvert}

% Statistical %
\newcommand{\pconv}{\overset{p}{\rightarrow}}
\newcommand{\dconv}{\overset{d}{\rightarrow}}
\newcommand{\lpconv}[1]{\overset{\mathcal{L}^#1}{\rightarrow}}
\newcommand{\asconv}{\overset{a.s}{\rightarrow}}
\newcommand{\conv}{\rightarrow}
\newcommand{\Prob}[1]{\mathbb{P}\left\lbrace #1 \right\rbrace}
\DeclarePairedDelimiter{\ind}{ \mathbbm{1}\lbrace }{\rbrace}

% Theorems %
\newtheorem*{claim}{\textnormal{Claim}}
\newtheorem{prop}{Proposition}
\newtheorem*{prop*}{Proposition}
\newenvironment{solution}{\begingroup \color{nu purple} \begin{proof}[\bfseries Solution] $ $\newline $ $\newline}{\end{proof} \endgroup}

